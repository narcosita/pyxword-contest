# http://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
indent_style = space
indent_size = 4

[*.{js,css,scss.html}]
indent_size = 2

[*.{yaml,yml}]
indent_size = 2
indent_style = space

[fixtures/crosswords/**.{txt,yaml,yml}]
trim_trailing_whitespace = false
end_of_line = lf
